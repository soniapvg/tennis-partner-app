<h1>Mes Chatrooms</h1>
<h3><%= link_to "Mes Invitations", invitations_path %></h3>
<% @chatrooms.each do |chatroom| %>
  <div style="border: 1px solid black; margin: 10px; padding: 10px;">
    <h3><%= chatroom.other_user(current_user).first_name %> <%= chatroom.other_user(current_user).last_name %> <%= link_to "Go to Chatroom", chatroom_path(chatroom) %></h3>
    <% last_message = chatroom.messages.order(created_at: :desc).first %>
    <% if last_message.present? %>
      <p><%= last_message.content %> - <%= last_message.created_at.strftime('%m/%d/%Y %I:%M %p') %></p>
    <% end %>
  </div>
  <br>
<% end %>
