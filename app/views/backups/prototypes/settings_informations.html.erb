    <option value="">Choisir votre genre</option>
    <option value="man">Homme</option>
    <option value="woman">Femme</option>
    <option value="indefined">Je ne souhaite pas pr√©ciser</option>
  </select>
  
  <label>Description</label>
  <textarea rows="5"></textarea>
</form>

<div class="bar bar-standard bar-footer-secondary">
  <%= link_to prototypes_settings_path, class: "btn btn-primary btn-block" do %>
