  <ul class="table-view">
    <% @partners.each do |partner| %>
      <li class="table-view-cell media">
        <%= link_to user_path(partner.id), class: "navigate-right" do %>
          <% if partner.avatar.attached? %>
            <%= image_tag partner.avatar, alt: 'Photo de profil', class: "media-object pull-left avatar-s" %>
          <% else %>
            <div class="media-object pull-left avatar-placeholder-s">
              <span class="material-icons-round">person</span>
            </div>
          <% end %>
          <div class="media-body">
            <%= partner.first_name %> <%= partner.last_name %>
            <p><%= partner.experience %></p>
          </div>
        <% end %>
      </li>
    <% end %>
  </ul>

