<% content_for :title do %>
  <h1 class="title">Les joueurs du club</h1>
<% end %>

<ul class="table-view">
  <% @users.each do |user| %>
    <li class="table-view-cell media">
      <%= link_to user, class: "navigate-right" do %>
        <img class="media-object pull-left" src="http://placehold.it/42x42">
        <div class="media-body">
          <%= user.first_name %> <%= user.last_name %>
          <p><%= user.experience %></p>
        </div>
      <% end %>
    </li>
  <% end %>
</ul>

<div class="content-padded">
  <%= link_to destroy_user_session_path, method: :delete, class: "btn btn-primary btn-block" do %>
    Se d√©connecter
  <% end %>
</div>
