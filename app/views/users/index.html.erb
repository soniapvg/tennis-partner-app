<% content_for :back_button do %>
  <%= link_to '', users_search_path, class: "icon icon-left-nav pull-left" %>
<% end %>

<% content_for :title do %>
  <h1 class="title">Tous les joueurs du club</h1>
<% end %>

<%= search_form_for @q, remote: true do |f| %>
  <%= f.label :first_name_or_last_name, 'Recherche par prÃ©nom ou nom' %>
  <%= f.search_field :first_name_or_last_name_i_cont %>
  
  <%= f.submit "Rechercher" %>
<% end %>

<ul class="table-view">
  <% @partners.each do |partner| %>
    <li class="table-view-cell media">
      <%= link_to user_path(partner.id), class: "navigate-right" do %>
        <% if partner.avatar.attached? %>
          <%= image_tag partner.avatar, alt: 'Photo de profil', class: "media-object pull-left avatar-s" %>
        <% else %>
          <div class="media-object pull-left avatar-placeholder-s">
            <span class="material-icons-round">person</span>
          </div>
        <% end %>
        <div class="media-body">
          <%= partner.first_name %> <%= partner.last_name %>
          <p><%= partner.experience %></p>
        </div>
      <% end %>
    </li>
  <% end %>
</ul>
