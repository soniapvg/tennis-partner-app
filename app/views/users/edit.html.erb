<%= form_with(model: @user, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :first_name %>
    <%= form.text_field :first_name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :last_name %>
    <%= form.text_field :last_name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :date_of_birth %>
    <%= form.date_field :date_of_birth, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :gender %>
    <%= form.select :gender, User.genders.keys, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :experience %>
    <%= form.select :experience, User.experiences.keys, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :code_club %>
    <%= form.text_field :code_club, class: "form-control" %>
  </div>
  <%= form.submit "Enregistrer les modifications", class: "btn btn-primary" %>
<% end %>
