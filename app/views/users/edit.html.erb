<% content_for :back_button do %>
  <%= link_to '', parameters_path, class: "icon icon-left-nav pull-left" %>
<% end %>

<% content_for :title do %>
  <h1 class="title">Mes paramètres de joueur</h1>
<% end %>

<div class="content-padded">
  <h3>Changer d'avatar ?</h3>
  <%= form_tag user_avatars_path(@user), multipart: true do %>
    <%= file_field_tag :avatar %>
    <%= submit_tag "mettre à jour" %>
  <% end %>
  <br>

  <%= form_with(model: @user, local: true) do |form| %>
    <div class="form-group">
      <%= form.label :prénom %>
      <%= form.text_field :first_name, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.label :nom %>
<%= form.text_field :last_name, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.label :date_de_naissance %>
      <%= form.date_field :date_of_birth, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.label :genre %>
      <%= form.select :gender, User.genders.keys, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.label :Niveau_de_jeu %>
      <%= form.select :experience, User.experiences.keys, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.label :description %>
      <%= form.text_area :description, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.label :code_club %>
      <%= form.text_field :code_club, class: "form-control" %>
    </div>

    <fieldset>
      <legend>Disponibilités</legend>
      <div>
        <%= form.check_box :week_day %>
        <label>Semaine / journée</label>
      </div>
      <div>
        <%= form.check_box :week_night %>
        <label>Semaine / soir</label>
      </div>
      <div>
        <%= form.check_box :weekend_day %>
        <label>Week-end / journée</label>
      </div>
      <div>
        <%= form.check_box :weekend_night %>
        <label>Week-end / soir</label>
      </div>
    </fieldset>

    <div class="form-group">
      <%= form.label :"Je_joue_seulement_à_l'extérieur : " %>
      <%= form.check_box :outside %>
    </div>

      <br>

      <div class="actions">
        <%= button_tag type: "submit", class: "btn btn-primary btn-block" do %>
          <span class="icon icon-check"></span> Enregistrer les modifications
        <% end %>
      </div>

  <% end %>
</div>
