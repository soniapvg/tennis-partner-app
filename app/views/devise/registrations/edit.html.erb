<% content_for :back_button do %>
  <%= link_to user_path(current_user), class: "btn-back" do %>
    <i class="bi bi-arrow-left"></i>
  <% end %>
<% end %>

<% content_for :title do %>
  <h1 class="title">Gérer mon compte</h1>
<% end %>

<div class="container-xl">
  <%= form_for resource, as: resource_name, url: registration_path(resource_name), :method => :put, html: { class: "stack" } do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div>
      <%= f.label :email, "Email", class: "form-label" %>
      <%= f.text_field :email, autofocus: true, class: "form-control" %>
    </div>

    <div>
      <%= f.label :password, "Nouveau mot de passe", class: "form-label" %>
      <small>(<%= @minimum_password_length %> caractères minimum)</small>
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
    </div>
    <div>
      <%= f.label :password_confirmation, "Confirmer le mot de passe", class: "form-label" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
    </div>
    <div>
      <%= f.label :old_password, "Confirmer le mot de passe", class: "form-label" %>
      <small>(obligatoire pour enregistrer les modifications)</small>
      <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control" %>
    </div>
  <% end %>
</div>

<% content_for :actions do %>
  <%= button_to registration_path(resource_name), method: :delete, class: "btn btn-warning", data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" } do %>
    <i class="bi bi-trash3-fill"></i>
    Supprimer mon compte
  <% end %>
  <%= button_tag type: :submit, :form => "edit_user", class: "btn btn-primary" do %>
    <i class="bi bi-check-lg"></i>
    Enregistrer les modifications
  <% end %>
<% end %>
