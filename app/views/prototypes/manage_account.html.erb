<% content_for :back_button do %>
  <%= link_to '', prototypes_settings_path, class: "icon icon-left-nav pull-left" %>
<% end %>

<% content_for :title do %>
  <h1 class="title">Gérer mon compte</h1>
<% end %>

<form class="input-group">
  <div class="input-row">
    <label>Prénom</label>
    <input type="text" placeholder="Joséphine">
  </div>
  <div class="input-row">
    <label>Nom</label>
    <input type="text" placeholder="Pean">
  </div>
  <div class="input-row">
    <label>Email</label>
    <input type="email" placeholder="josephinepean@gmail.com">
  </div>
  <div class="input-row">
    <label>Password</label>
    <input type="password">
  </div>
  <div class="input-row">
    <label>Confirmation</label>
    <input type="password">
  </div>
</form>

<button class="btn btn-positive btn-block btn-outlined">
  <span class="icon icon-check"></span>
  Mettre à jour
</button>
<button class="btn btn-negative btn-block btn-outlined">
  <span class="icon icon-trash"></span>
  Supprimer mon compte
</button>