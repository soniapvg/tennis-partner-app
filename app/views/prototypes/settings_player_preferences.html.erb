<% content_for :back_button do %>
  <%= link_to '', prototypes_settings_path, class: "icon icon-left-nav pull-left" %>
<% end %>
    
<% content_for :title do %>
  <h1 class="title">Mes informations</h1>
<% end %>

<form class="content-padded"> 
  <label>Niveau de jeu</label>
  <select>
    <option value="">Choisissez votre niveau</option>
    <option value="1">Débutant</option>
    <option value="2">30/1</option>
    <option value="3">30/2</option>
    <option value="4">15/1</option>
    <option value="5">15/2</option>
    <option value="6">15</option>
  </select>
  
  <fieldset>
    <legend>Disponibilités</legend>
    <div>
      <input type="checkbox">
      <label>Semaine / journée</label>
    </div>
    <div>
      <input type="checkbox">
      <label>Semaine / soir</label>
    </div>
    <div>
      <input type="checkbox">
      <label>Week-end / journée</label>
    </div>
    <div>
      <input type="checkbox">
      <label>Week-end / soir</label>
    </div>
  </fieldset>

  <label>Je joue qu'à l'extérieur</label>
  <select>
    <option value="yes">Oui</option>
    <option value="no">Non</option>
  </select>
</form>

<div class="bar bar-standard bar-footer-secondary">
  <%= link_to prototypes_settings_path, class: "btn btn-primary btn-block" do %>
    <span class="icon icon-check"></span>
    Enregistrer
  <% end %>
</div>
